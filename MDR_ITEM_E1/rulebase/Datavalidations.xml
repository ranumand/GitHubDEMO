	<constraint>
		<name>findItemisHightestGTIN</name>
		<description>findItemisHightestGTIN</description>  
		<condition>
			<and>
				<eq>
					<var>CATALOG_NAME</var>
					<const type="string">ITEM_MASTER</const>
				</eq>
				<defined>
					<var>PRODUCTID</var>
				</defined>
			</and>
		</condition>
		<action>
			<assign>
				<var>HightGTIN</var>
				<table source="sql" distinct="true">
					<literal>cat_Hinfo/PRODUCTID</literal>
					<where type="SQL">
						<sql>
							<eq>
								<literal>cat_Hinfo/PRODUCTID</literal>
								<var>PRODUCTID</var>
							</eq>
						</sql>
					</where>
				</table>
			</assign>
		</action>
	</constraint>
	<constraint>
		<name>checkItemisHightestGTIN</name>
		<description>checkItemisHightestGTIN</description>  
		<condition>
			<and>
				<eq>
					<var>CATALOG_NAME</var>
					<const type="string">ITEM_MASTER</const>
				</eq>
				<eq>
					<var>HightGTIN</var>
					<var>PRODUCTID</var>
				</eq>
			</and>
		</condition>
		<action>
			<assign>
				<var>isHightGTIN</var>
				<const type="string">true</const>
			</assign>
		</action>
		<action>
			<assign>
				<var>isHightGTIN</var>
				<const type="string">false</const>
			</assign>
		</action>
	</constraint>
