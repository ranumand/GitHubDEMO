	<name>Catalog Validations</name>
	<description lang="en">Catalog Data Validations</description>
	<execution_directive first_pass="skip"/>
	<declare>
		<var>CONTAINEDREL</var>
		<link type="relationship">
			<literal>ContainedBy</literal>
		</link>
	</declare>
	<declare usage="local">
		<var>isHightGTIN</var>
		<datatype type="string"/>
	</declare>
	<declare usage="local">
		<var>HightGTIN2</var>
		<datatype type="string"/>
	</declare>
	<declare usage="local">
		<var>cat_Hinfo</var>
